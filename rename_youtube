#!/usr/bin/perl
use strict;
# rename files downloaded with clive to something a bit more sensible

my $where;
if(!@ARGV) {
  $where = '.';
  warn "Operating on ./*.{flv,mp4}\n";
}
else {
  if(! -d ($where = $ARGV[0])) {
    ($where) = $ARGV[0] =~ m{(/.+)/.*[.](flv|mp4)$}i
  }
}
@ARGV = (glob("$where/*.flv"), glob("$where/*.mp4"));
die("No files found\n") if !@ARGV;

printf("Do you want to operate on %d files matching *.{flv,mp4} in %s [y/N] ",
  scalar(@ARGV), $where,
);
chomp(my $yes = <STDIN>);

if(lc($yes) ne 'y') {
  exit;
}

for my $f(@ARGV) {
  (my $n = $f) =~ s{([A-Z][a-zåäö0-9]*)}{$1_}g;
  $n =~ s/_{2,}/_/g;
  $n =~ s{_+/}{/}g;
  $n =~ s{_+([.](?:flv|mp4))$}{$1};
  if(!rename($f, $n)) {
    warn("Could not rename($f, $n) - $!\n");
  }
}
