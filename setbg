#!/usr/bin/perl

my @c = qw(

   417030 020033         100020               001714
  417030 000419                               04a208
  417030                 001620           141703  170013
  001420 140041          0d0020        020033 161703 141702
  000920                 170905               091703
  200171 001021                              000020
   170014 001713         020033             170d03  030218
                                           00170b
                                           0d0020
                                            00170b
                                            001717
                                            170236
                                       000c20    020033
);

bg();
sub bg {
  my $background = $_[0] || $c[int(rand(scalar(@c)))];
  warn "$background\n";
  print "\e]11;#$background\a";
}
